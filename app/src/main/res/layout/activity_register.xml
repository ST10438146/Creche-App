<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/primary_color">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white"
            android:contentDescription="Back button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tvStepProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 5"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Step 1: Parent Information -->
            <LinearLayout
                android:id="@+id/llParentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Information"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please provide your personal details"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="32dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etParentName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Full Name"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etParentEmail"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etParentPhone"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:hint="Phone Number"
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- NEW: Password field for registration -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    app:passwordToggleEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegisterPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password (min 6 characters)"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
                <!-- END NEW -->

            </LinearLayout>

            <!-- Step 2: Child Details -->
            <LinearLayout
                android:id="@+id/llChildInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Details"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tell us about your child"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="32dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etChildName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Child's Full Name"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etChildAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age (in years)"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAllergies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Allergies (if any)"
                        android:inputType="textMultiLine"
                        android:minLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Step 3: Emergency Information -->
            <LinearLayout
                android:id="@+id/llEmergencyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provide emergency contact details"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="32dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmergencyContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact Number"
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMedicalNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Any crucial medical notes"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Step 4: Documents -->
            <LinearLayout
                android:id="@+id/llDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Documents"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload required documents"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="32dp" />

                <Button
                    android:id="@+id/btnUploadBirthCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Upload Birth Certificate"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnUploadMedicalRecords"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Upload Medical Records"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

            <!-- Step 5: Review -->
            <LinearLayout
                android:id="@+id/llReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review Information"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please review your information before submitting"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="32dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parent Information"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvReviewParentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: John Doe"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReviewParentEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: john.doe@email.com"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReviewParentPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone: 0812345678"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReviewParentPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password: ********"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Child Information"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvReviewChildName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Child's Name: Jane Doe"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReviewChildAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Child's Age: 3 years old"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReviewAllergies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allergies: Peanuts"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency and Medical Information"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvReviewEmergencyContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Contact: John's Uncle - 0812345678"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvReviewMedicalNotes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Notes: None"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="Next"
        android:textSize="16sp"
        android:backgroundTint="@color/primary_color"
        app:cornerRadius="12dp"
        android:textColor="@color/white" />

</LinearLayout>