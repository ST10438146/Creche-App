<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Send Message Section -->
        <LinearLayout
            android:id="@+id/sendLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvSendHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message to Parent"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_primary" />

            <Spinner
                android:id="@+id/spnParents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your message..."
                android:minLines="2"
                android:maxLines="4"
                android:inputType="textMultiLine"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:backgroundTint="@color/primary_color"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Received Messages -->
        <TextView
            android:id="@+id/tvReceivedHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Messages"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />

        <!-- Sent Messages (visible only for staff/admin) -->
        <LinearLayout
            android:id="@+id/sentMessagesSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvSentHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent Messages"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_primary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSentMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
